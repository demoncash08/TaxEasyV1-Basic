  <body>
    <header></header>
    <main>
    
      <section>

        <div id="mainimg">
            <div>

                <img src="./images/wokingman.png" alt="working">
                <h2>Maximum tax savings on ITR</h2>
                <ul id="featuresList">
                    <li>Easy to use</li>
                    <li>Tips and suggestions on tax savings</li>
                    <li>Expert advices and consultancy at cheapest rates</li>
                </ul>
            </div>
        </div>
        <div  id="loginpage">
            <div id="notregistered">
                <p>
                    Already registered?
                </p>
                <a href="/login">Login</a>
                    
            </div>
            <div id="loginBox">

                <h3>Welcome!</h3>
                <h1>Create your account</h1>
                <form action="/signup" method="POST">
                  <input type="email" value="Enter email" name="email" required></input>
                  <br>
                  <input type="password" value="Password" name="password" required>
                  <br>
                <!-- <img src="./images/openeye.svg"></input> -->
                <button >Sign up</button>
                </form>
                

            </div>
        </div>
      </section>
    </main>
